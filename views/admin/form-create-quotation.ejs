<!DOCTYPE html>
<html lang="en">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
	  <link rel="icon" href="images/favicon.ico" type="image/ico" />

    <title>Admin </title>
    <% include ../partials/link %>
    
  </head>

  <body class="nav-md">
    <div class="container body">
      <div class="main_container">
          
        <% include ../partials/header %>

        <!-- page content -->
        <div class="right_col" role="main">
          <!-- top tiles -->
          <div class="row tile_count">
                <form action="/admin/create-quotation" method="POST" role="form" id="form-add"> 
                        <div class="row">
                            <h1>Tạo danh ngôn</h1>
                            <div class="col-md-8" style="border-right: #e5e5e5 solid 1px;">
                                <div class="row">
                                    <div class=" col-md-12 col-lg-12">
                                        <label for="">Tác giả</label>																				
                                        <input type="text" minlength="6" required name="author" id="author" class="form-control">
                                    </div>
                                    <div class=" col-md-12 col-lg-12" style="height: 20px; width: 100%">
                                        
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <label>Nội dung</label>
                                            <textarea name="text" id="text" class="tinymce"></textarea>
                                        </div>
                                        
                                    </div>	
                                </div>
                                                    
                            </div>													
                                
                            
                            <div class="col-md-4">
                                <div class="mid" style="border-top: #73879C solid 5px">
                                    <div class="mid-top top">
                                        <h3><i class="fa fa-bars" aria-hidden="true" style="color: #666666"></i> Thể loại</h3>
                                    </div>
                                    <div class="mid-bot">
                                        <select class="form-control type" name="type" style="width: 100% ; height: 35px" >
                                            <% if(types.length > 0) {
                                                for( var i = 0 ; i < types.length ; i++){
                                            %>
                                            <option value="<%= types[i].type %>"><%= types[i].type %></option>
                                            <%
                                                }
                                            }
                                            %>

                                        </select>
                                    </div>
                                    <br>
                                    
                                </div>
                                <button type="submit" class="btn btn-success">Tạo</button>
                                <button type="button" class="btn btn-danger destroy">Hủy</button>
                            </div>
                        </div>
                        <br>			
                        <div style="width: 100% ; height: 30px"></div>
                    </form>
          </div>
          <!-- /top tiles -->

          <div class="row">

          </div>
          <br />
        </div>
        <!-- /page content -->

        <!-- footer content -->
        <% include ../partials/footer %>
        <!-- /footer content -->
      </div>
    </div>

    <% include ../partials/script %>	
    
    <script>
        $('.destroy').click(function(){
			swal({
				title: "Bạn có chắc chắn muốn hủy ?",
				  // text: "Nếu như xóa, Tập tin này sẽ được chuyển đến thùng rác !",
				  icon: "warning",
				  buttons: true,
				  dangerMode: true,
				})
			.then((willDelete) => {
			  if (willDelete) {
			    window.location.href = "/admin/table-quotation";
			    
			  } else {
			    swal("Hủy thất bại");
			  }
			});			
		}); 
    </script>
  </body>
</html>
